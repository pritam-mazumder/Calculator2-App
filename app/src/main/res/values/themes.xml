<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Calculator3" parent="Base.Theme.Calculator3" />

    <style name="operationbutton" parent="commonbutton">
        <item name="android:textColor">#00C853</item>
    </style>

    <style name="digitbutton" parent="commonbutton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="commonbutton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="backgroundTint">#222222</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">12dp</item>
    </style>
</resources>